{
  "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "types": ["react-native"],
      "typeRoots": ["config/unistyles.d.ts", "./node_modules/@types"],
      "paths": {
        "@/*": ["./*"],
        "@assets/*": ["./assets/*"]
      },
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "module": "ESNext",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "baseUrl": ".",
      "skipLibCheck": true,
    }
}
